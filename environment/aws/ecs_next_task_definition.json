{
    "family": "next",
    "networkMode": "awsvpc",
    "cpu": "512",
    "memory": "1024",
    "executionRoleArn": "arn:aws:iam::949545720247:role/ecs-next-task-execution-20240406054838277300000003",
    "taskRoleArn": "arn:aws:iam::949545720247:role/next-20240406054838277500000005",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "runtimePlatform": {
        "operatingSystemFamily": "LINUX",
        "cpuArchitecture": "X86_64"
    },

    "containerDefinitions": [
        {
            "name": "next",
            "image": "${image}",
            "essential": true,
            "environment": [
                {
                    "name": "API_ENDPOINT",
                    "value": "${api_endpoint}"
                }
            ],
            "portMappings": [
                {
                    "name": "http",
                    "protocol": "tcp",
                    "appProtocol": "http",
                    "containerPort": 3000,
                    "hostPort": 3000
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-create-group": "true",
                    "awslogs-group": "${log_group_name}",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}